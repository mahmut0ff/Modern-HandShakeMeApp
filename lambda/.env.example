# Database
DATABASE_URL="postgresql://user:password@localhost:5432/masters_platform?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# AWS
AWS_REGION="us-east-1"
AWS_ACCOUNT_ID="123456789012"

# DynamoDB Tables
LOCATION_TRACKING_TABLE="location-tracking"
LOCATION_UPDATES_TABLE="location-updates"
TRACKING_EVENTS_TABLE="tracking-events"
GEOCODING_CACHE_TABLE="geocoding-cache"
MAPS_USAGE_TABLE="maps-usage"
MASTERS_TABLE="masters"
USERS_TABLE="users"
CATEGORIES_TABLE="categories"
SERVICES_TABLE="services"
PORTFOLIO_TABLE="portfolio"
AVAILABILITY_TABLE="availability"
CACHE_TABLE="cache"

# S3
S3_BUCKET_AVATARS="masters-platform-avatars"
S3_BUCKET_PORTFOLIO="masters-platform-portfolio"
S3_BUCKET_ORDERS="masters-platform-orders"
S3_BUCKET_PROJECTS="masters-platform-projects"
S3_BUCKET_CHAT="masters-platform-chat"
S3_BUCKET_DISPUTES="masters-platform-disputes"

# CloudFront
CLOUDFRONT_DOMAIN="cdn.example.com"
CLOUDFRONT_KEY_PAIR_ID="your-key-pair-id"
CLOUDFRONT_PRIVATE_KEY_PATH="/path/to/private-key.pem"

# Email (SES)
SES_FROM_EMAIL="noreply@example.com"
SES_REGION="us-east-1"

# Telegram Bot (ONLY authentication method)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_BOT_USERNAME="handshakeme_bot"
TELEGRAM_WEBHOOK_SECRET="your-webhook-secret-token"

# REMOVED: Phone/SMS Authentication (no longer supported)
# TWILIO_ACCOUNT_SID="removed"
# TWILIO_AUTH_TOKEN="removed"
# WHATSAPP_FROM_NUMBER="removed"

# Yandex Maps API
YANDEX_MAPS_API_KEY="your-yandex-maps-api-key"
YANDEX_GEOCODING_TIMEOUT="10000"
YANDEX_PLACES_TIMEOUT="10000"
YANDEX_ROUTING_TIMEOUT="15000"
YANDEX_MAX_RETRIES="3"
YANDEX_RETRY_DELAY="1000"

# Rate Limiting (requests per hour)
GEOCODING_RATE_LIMIT="100"
PLACES_RATE_LIMIT="50"
ROUTING_RATE_LIMIT="20"

# Cache TTL (seconds)
MEMORY_CACHE_GEOCODING_TTL="3600"
MEMORY_CACHE_PLACES_TTL="1800"
MEMORY_CACHE_ROUTING_TTL="900"
DB_CACHE_GEOCODING_TTL="86400"
DB_CACHE_PLACES_TTL="21600"
DB_CACHE_ROUTING_TTL="7200"

# Push Notifications (SNS)
SNS_PLATFORM_APPLICATION_ARN_IOS="arn:aws:sns:region:account:app/APNS/app-name"
SNS_PLATFORM_APPLICATION_ARN_ANDROID="arn:aws:sns:region:account:app/GCM/app-name"

# Payment Gateway
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Monitoring
SENTRY_DSN="https://...@sentry.io/..."
SENTRY_ENVIRONMENT="development"

# API
API_GATEWAY_URL="https://api.example.com"
WEBSOCKET_API_URL="wss://ws.example.com"
FRONTEND_URL="https://app.handshakeme.com"

# Platform Settings
PLATFORM_COMMISSION_MIN=0.05
PLATFORM_COMMISSION_MAX=0.15
PLATFORM_COMMISSION_DEFAULT=0.10

# Notifications
SNS_PLATFORM_APPLICATION_ARN_IOS="arn:aws:sns:region:account:app/APNS/app-name"
SNS_PLATFORM_APPLICATION_ARN_ANDROID="arn:aws:sns:region:account:app/GCM/app-name"
SNS_PLATFORM_APPLICATION_ARN_WEB="arn:aws:sns:region:account:app/WEB/app-name"
PUSH_NOTIFICATIONS_ENABLED="true"

# DynamoDB Tables for Notifications
NOTIFICATIONS_TABLE="notifications"
NOTIFICATION_SETTINGS_TABLE="notification-settings"
PUSH_TOKENS_TABLE="push-tokens"
