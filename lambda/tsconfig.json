{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["core/shared/*"],
      "@/types/*": ["core/shared/types/*"]
    },
    "types": ["node", "@types/aws-lambda", "jest"]
  },
  "include": [
    "core/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "terraform",
    "scripts"
  ]
}
