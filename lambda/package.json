{
  "name": "masters-platform-serverless",
  "version": "1.0.0",
  "description": "Serverless Masters Platform - DynamoDB",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node simple-server-v2.js",
    "start": "node simple-server-v2.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "type-check": "tsc --noEmit",
    "build": "esbuild core/**/*-dynamodb.ts --bundle --platform=node --target=node20 --outdir=dist --external:@aws-sdk/* --external:uuid",
    "deploy:dev": "cd terraform && terraform workspace select dev && terraform apply",
    "deploy:prod": "cd terraform && terraform workspace select production && terraform apply"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-ses": "^3.490.0",
    "@aws-sdk/client-sns": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.133",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
