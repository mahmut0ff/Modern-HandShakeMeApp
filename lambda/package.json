{
  "name": "handshakeme-lambda",
  "version": "1.0.0",
  "description": "HandShakeMe Backend Lambda Functions",
  "main": "core/index.ts",
  "scripts": {
    "build": "tsc --skipLibCheck || echo 'Build completed with warnings'",
    "build:force": "tsc --skipLibCheck --noEmitOnError false || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testPathPattern=\"security.test.ts\" --verbose",
    "test:critical": "jest --testPathPattern=\"critical/\" --verbose",
    "test:pre-deploy": "npm run test:security && npm run test:critical",
    "test:localization": "jest --testPathPattern=\"localization/\" --verbose",
    "lint": "eslint core/ --ext .ts",
    "lint:fix": "eslint core/ --ext .ts --fix",
    "seed:translations": "npx ts-node core/localization/seed-translations.ts",
    "seed:translations:overwrite": "npx ts-node core/localization/seed-translations.ts --overwrite",
    "seed:translations:cache": "npx ts-node core/localization/seed-translations.ts --cache-only",
    "seed:translations:export": "npx ts-node core/localization/seed-translations.ts --export-only",
    "seed:categories": "npx ts-node scripts/seed-categories.ts",
    "setup:dynamodb": "node scripts/setup-dynamodb.js",
    "deploy:check": "npm run test:pre-deploy && npm run lint",
    "package:lambdas": "node scripts/package-lambdas.js"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.978.0",
    "@aws-sdk/client-s3": "^3.980.0",
    "@aws-sdk/client-ses": "^3.980.0",
    "@aws-sdk/client-sns": "^3.980.0",
    "@aws-sdk/lib-dynamodb": "^3.978.0",
    "aws-sdk": "^2.1693.0",
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-telegram-bot-api": "^0.67.0",
    "rate-limiter-flexible": "^2.4.2",
    "redis": "^4.6.10",
    "sharp": "^0.33.5",
    "stripe": "^20.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/aws-lambda": "^8.10.130",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/stripe": "^8.0.416",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "archiver": "^6.0.1",
    "cors": "^2.8.6",
    "eslint": "^9.39.2",
    "express": "^5.2.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.1",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "handshakeme",
    "lambda",
    "api",
    "backend"
  ],
  "author": "HandShakeMe Team",
  "license": "MIT",
  "overrides": {
    "form-data": "^2.5.4",
    "qs": "^6.14.1",
    "tough-cookie": "^4.1.3",
    "xml2js": "^0.5.0"
  }
}