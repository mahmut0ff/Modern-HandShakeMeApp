# ============================================
# HandShakeMe - Local Development Environment
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# DynamoDB Local
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE=handshakeme-local
DYNAMODB_TABLE_NAME=handshakeme-local
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# JWT Configuration (Change in production!)
JWT_SECRET=local-dev-jwt-secret-change-in-production-32chars
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Telegram Bot
TELEGRAM_BOT_TOKEN=8113708588:AAFO4pmyCAJ1ky9hrlSOAhjpBk6ru_SU6zw
TELEGRAM_BOT_USERNAME=handshakeme_bot

# CORS (Add your local IP)
CORS_ORIGIN=*

# Logging
LOG_LEVEL=debug

# WebSocket
WS_PORT=3001
WEBSOCKET_ENDPOINT=ws://localhost:3001

# File Upload (Local)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

