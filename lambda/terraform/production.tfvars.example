# Production Terraform Variables
# Copy this file to production.tfvars and fill in real values

# Environment
environment = "production"
aws_region  = "us-east-1"
aws_account_id = "473522039044"

# Project
project_name = "handshakeme"
app_version  = "1.0.0"

# Domain and SSL
domain_name = "handshakeme.kg"
api_domain  = "api.handshakeme.kg"
ws_domain   = "ws.handshakeme.kg"
cdn_domain  = "cdn.handshakeme.kg"

# SSL Certificate ARN (create in ACM first)
ssl_certificate_arn = "arn:aws:acm:us-east-1:473522039044:certificate/CHANGE_ME"

# Database
dynamodb_table_name = "handshakeme-prod"
dynamodb_billing_mode = "PAY_PER_REQUEST"
dynamodb_point_in_time_recovery = true
dynamodb_deletion_protection = true

# S3 Buckets
s3_bucket_prefix = "handshakeme-prod"
s3_enable_versioning = true
s3_enable_encryption = true
s3_lifecycle_enabled = true

# Lambda Configuration
lambda_memory_size = 512
lambda_timeout = 30
lambda_reserved_concurrency = 100
lambda_environment_variables = {
  NODE_ENV = "production"
  LOG_LEVEL = "info"
  PLATFORM_COMMISSION_DEFAULT = "0.03"
  KG_DEFAULT_LANGUAGE = "ru"
  KG_DEFAULT_CURRENCY = "KGS"
}

# API Gateway
api_throttle_rate_limit = 10000
api_throttle_burst_limit = 5000
api_enable_caching = true
api_cache_ttl = 300

# Monitoring
enable_detailed_monitoring = true
log_retention_days = 30
alert_email = "alerts@handshakeme.kg"

# Security
enable_waf = true
enable_shield = false  # Set to true for DDoS protection (costs extra)
allowed_ip_ranges = [
  "0.0.0.0/0"  # Allow all IPs, restrict in production if needed
]

# Backup and Recovery
backup_retention_days = 30
enable_cross_region_backup = false  # Set to true for disaster recovery

# Auto Scaling
enable_auto_scaling = true
min_capacity = 5
max_capacity = 1000
target_utilization = 70

# Tags
tags = {
  Environment = "production"
  Project     = "HandShakeMe"
  Owner       = "DevOps"
  CostCenter  = "Engineering"
  Backup      = "Required"
}